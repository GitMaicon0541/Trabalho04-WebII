datasource db {
  provider = "sqlite"
  url      = "file:../dados.db"
}

model User {
  id            Int                 @id @default(autoincrement())
  email         String              @unique
  name          String
  password      String
  isVerified    Boolean             @default(false)
  todoLists     TodoList[]
  categories    Category[]
  sharedLists   SharedCategory[]
}

model TodoList {
  id                  Int           @id @default(autoincrement())
  title               String
  description         String
  createdAt           DateTime      @default(now())
  concludeAt          DateTime?
  dateForConclusion   DateTime
  
  categoryId          Int?
  categories          Category?      @relation(fields: [categoryId], references: [id])

  userId              Int
  user                User          @relation(fields: [userId], references: [id])
}

model Category {
  id              Int       @id @default(autoincrement())
  title           String

  userId          Int
  user            User          @relation(fields: [userId], references: [id])

  todoLists       TodoList[]
  sharedWith      SharedCategory[]
}

model SharedCategory{
  id          Int       @id @default(autoincrement())
  categoryId  Int
  categories  Category      @relation(fields: [categoryId], references: [id])
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
}
